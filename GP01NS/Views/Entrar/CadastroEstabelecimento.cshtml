@{
    ViewBag.Title = "Cadastro de Estabelecimento";
    Layout = "~/Views/Autenticacao/Layout.cshtml";
}

<link href="~/CSS/Views/Autenticacao/musico.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-xl-3 img"></div>
        <div class="col-md-7 ml-auto mr-auto">
            <form action="" method="post" class="col-md-12">
                <h5>CADASTRO DE ESTABELECIMENTO</h5>
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label for="nome">Nome do Estabelecimento</label>
                            <input type="text" class="form-control" id="nome" aria-describedby="emailHelp" placeholder="Nome do Estabelecimento">
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Digite seu email">
                        </div>
                        <div class="form-group">
                            <label for="cpf">CPF</label>
                            <input type="number" class="form-control" id="cpf" aria-describedby="emailHelp" placeholder="Digite seu CPF">
                        </div>
                        <div class="form-group">
                            <label for="nomeFantasia">Nome Fantasia</label>
                            <input type="text" class="form-control" id="nomeFantasia" aria-describedby="emailHelp" placeholder="Nome Fantasia">
                        </div>
                        <div class="form-group">
                            <label for="endereco">Endereço</label>
                            <input type="text" class="form-control" id="endereco" aria-describedby="emailHelp" placeholder="Endereço">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group">
                            <label for="nome">Seu login</label>
                            <input type="text" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Digite seu login">
                        </div>
                        <div class="form-group">
                            <label for="Email">Data de Nascimento</label>
                            <input type="email" class="form-control" id="date" aria-describedby="emailHelp" placeholder="Data de nascimento">
                        </div>
                        <div class="form-group">
                            <label for="cnpj">CNPJ</label>
                            <input type="number" class="form-control" id="cnpj" aria-describedby="emailHelp" placeholder="Digite seu CNPJ">
                        </div>
                        <div class="form-group">
                            <label for="cep">CEP</label>
                            <input type="number" class="form-control" id="senha" aria-describedby="emailHelp" placeholder="Digite seu CEP">
                        </div>
                        <div class="form-group">
                            <label for="cep">Número</label>
                            <input type="number" class="form-control" id="senha" aria-describedby="emailHelp" placeholder="Número">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Ambientação</label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01">
                                <option selected></option>
                                <option value="Arrasta-pé">Claro</option>
                                <option value="Arrocha">Escuro</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">CRIAR </button>
                </div>
            </form>
        </div>
    </div>
</div>